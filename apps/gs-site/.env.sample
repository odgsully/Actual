# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Notion Integration
NOTION_API_KEY=your_notion_api_key_here

# Notion Database IDs (optional - only needed for specific tiles)
NOTION_HABITS_DATABASE_ID=your_habits_database_id
NOTION_TASKS_DATABASE_ID=your_tasks_database_id

# GitHub Integration (Phase 3)
# Create a Personal Access Token at: https://github.com/settings/tokens
# Required scopes:
#   - repo (for private repo access, if needed)
#   - read:user (for profile data)
#   - read:org (optional, for org repos)
# Rate limits: 5,000 requests/hour authenticated
GITHUB_PAT=ghp_your_github_personal_access_token_here

# Cross-App URLs (Phase 4 - Wabbit Apps Integration)
# Used for cross-app navigation and health checks
WABBIT_RE_URL=http://localhost:3000
GSREALTY_URL=http://localhost:3004
WABBIT_URL=http://localhost:3002

# 3rd Party OAuth (Phases 5+)
# Google OAuth - Create at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# YouTube Data API v3 (Phase 7 - Socials Stats)
# Setup: Use your existing Google Cloud project (same as Gmail OAuth)
#   1. Enable "YouTube Data API v3" in APIs & Services → Library
#   2. Create API Key in APIs & Services → Credentials
#   3. Restrict the key:
#      - Application restrictions: None (server-side calls don't have HTTP referrer)
#      - API restrictions: YouTube Data API v3 only
# Rate limits: 10,000 quota units/day (resets at midnight PT)
# Quota costs: Channel stats = 1 unit, Search = 100 units
YOUTUBE_API_KEY=
# Your YouTube channel ID (find at: youtube.com/account_advanced)
# Example: UC_x5XG1OV2P6uZZ5FSM9Ttw
YOUTUBE_CHANNEL_ID=

# WHOOP OAuth (Phase 7 - Health Metrics)
# Register at: https://developer-dashboard.whoop.com/
# Create a team first, then create an app with:
#   - Redirect URI (dev): http://localhost:3003/api/auth/whoop/callback
#   - Redirect URI (prod): https://gssite.vercel.app/api/auth/whoop/callback
# Required scopes: read:recovery, read:cycles, read:sleep, read:workout, offline
# Note: Development apps limited to 10 WHOOP members
WHOOP_CLIENT_ID=
WHOOP_CLIENT_SECRET=

# Twilio - For SMS notifications (Accountability Report)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Brother Printer Integration (Phase 8 - Hardware)
# MFC-J6540DW printer IP address on local network
# Find via: dns-sd -B _ipp._tcp (macOS) or printer's network settings
# Protocol: IPP on port 631
BROTHER_PRINTER_IP=192.168.1.xxx
# Optional: Override default port 631
# BROTHER_PRINTER_PORT=631

# Datadog APM Configuration
# Sign up at https://datadoghq.com (free tier: 1M traces/month)
# Get API key from: Organization Settings > API Keys
DD_API_KEY=your_datadog_api_key_here
DD_SITE=datadoghq.com
DD_SERVICE=gs-site
DD_ENV=development
DD_VERSION=1.0.0
# Optional: Disable tracing in development
# DD_TRACE_ENABLED=false
# DD_PROFILING_ENABLED=true
# DD_APPSEC_ENABLED=true
