<nav id="main-nav" class="fixed top-0 left-0 right-0 z-50 transition-all duration-500">
  <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
    <a href="#" class="text-xl font-bold tracking-tight font-['Playfair_Display'] nav-text-color">Wabbit</a>

    <!-- Desktop links -->
    <div class="hidden md:flex items-center gap-8">
      <a href="#how-it-works" class="text-sm nav-link-color hover:opacity-100 transition-all duration-700">How It Works</a>
      <a href="#ranking-modes" class="text-sm nav-link-color hover:opacity-100 transition-all duration-700">Ranking</a>
      <a href="#collaboration" class="text-sm nav-link-color hover:opacity-100 transition-all duration-700">Collaboration</a>
      <a href="#integrations" class="text-sm nav-link-color hover:opacity-100 transition-all duration-700">Integrations</a>
      <a href="#pricing" class="text-sm nav-link-color hover:opacity-100 transition-all duration-700">Pricing</a>
    </div>

    <div class="hidden md:flex items-center gap-3">
      <a href="https://app.wabbit.ai/login" class="text-sm nav-link-color hover:opacity-100 transition-all duration-700 px-4 py-2">Log In</a>
      <a href="https://app.wabbit.ai/signup" class="text-sm nav-cta px-5 py-2 rounded-full font-medium transition-all duration-700 hover:scale-[1.02]">Get Started</a>
    </div>

    <!-- Mobile hamburger -->
    <button id="mobile-menu-btn" class="md:hidden p-2 nav-link-color hover:opacity-100" aria-label="Open menu">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-white/10 bg-[#0a0a0f]/95 backdrop-blur-xl">
    <div class="px-6 py-4 space-y-3">
      <a href="#how-it-works" class="block text-sm text-white/60 hover:text-white py-2">How It Works</a>
      <a href="#ranking-modes" class="block text-sm text-white/60 hover:text-white py-2">Ranking</a>
      <a href="#collaboration" class="block text-sm text-white/60 hover:text-white py-2">Collaboration</a>
      <a href="#integrations" class="block text-sm text-white/60 hover:text-white py-2">Integrations</a>
      <a href="#pricing" class="block text-sm text-white/60 hover:text-white py-2">Pricing</a>
      <div class="pt-3 border-t border-white/10 flex flex-col gap-2">
        <a href="https://app.wabbit.ai/login" class="text-sm text-white/60 hover:text-white py-2">Log In</a>
        <a href="https://app.wabbit.ai/signup" class="inline-block text-center text-sm bg-white text-[#0a0a0f] px-5 py-2.5 rounded-full font-medium">Get Started</a>
      </div>
    </div>
  </div>
</nav>

<style>
  /* Default: transparent nav with dark text (for light sky hero) */
  #main-nav {
    background: transparent;
  }
  .nav-text-color { color: #1a1a2e; }
  .nav-link-color { color: rgba(26, 26, 46, 0.6); }
  .nav-cta { background: #ea580c; color: white; }

  /* Scrolled: dark nav with light text */
  #main-nav.scrolled {
    background: rgba(10, 10, 15, 0.85);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  #main-nav.scrolled .nav-text-color { color: white; }
  #main-nav.scrolled .nav-link-color { color: rgba(255, 255, 255, 0.6); }
  #main-nav.scrolled .nav-cta { background: white; color: #0a0a0f; }
</style>

<script>
  const nav = document.getElementById('main-nav')
  const btn = document.getElementById('mobile-menu-btn')
  const menu = document.getElementById('mobile-menu')

  // Scroll-based nav color switch
  function updateNav() {
    if (window.scrollY > 100) {
      nav?.classList.add('scrolled')
    } else {
      nav?.classList.remove('scrolled')
    }
  }
  window.addEventListener('scroll', updateNav, { passive: true })
  updateNav()

  // Mobile menu toggle
  btn?.addEventListener('click', () => menu?.classList.toggle('hidden'))
  menu?.querySelectorAll('a').forEach(a => a.addEventListener('click', () => menu?.classList.add('hidden')))
</script>
